@model ingInventario.Models.OrdenEntrada
@{
    ViewBag.Title = "DetalleOrden";
}


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox-title">
                <div class="form-group row">
                    <label class="col-2 text-right">N° Factura: </label>
                    <div class="col-sm-2">
                        <label>@Model.num_factura</label>
                    </div>
                    <label class="col-2 text-right">Usuario Ingreso: </label>
                    <div class="col-sm-2">
                        <label>@Model.Usuario.nombre</label>
                    </div>
                    <label class="col-2 text-right">Fecha Ingreso: </label>
                    <div class="col-sm-2">
                        <label>@Model.fecha.ToShortDateString()</label>
                    </div>
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped" >
                        <thead class="bg-primary">
                            <tr>
                                <th>Código Producto</th>
                                <th>Nombre</th>
                                <th>Cantidad</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.DetalleEntrada)
                            {
                                <tr>
                                    <td>@item.Producto.codigo</td>
                                    <td>@item.Producto.nombre</td>
                                    <td>@item.cantidad</td>                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
