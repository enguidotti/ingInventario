<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <!--Inactividad de usario-->
    <meta http-equiv="refresh" content="1800;url=../Usuario/Logout" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Inventario</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/animate.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/fonts/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    <!--Se cargan las páginas sobre el layout-->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/Scripts/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/Scripts/app/inspinia.js"></script>
    <script src="~/Scripts/plugins/pace/pace.min.js"></script>
</head>
<body>
    @if (Session["usuario"] != null)
    {

        <div id="wrapper" class="@Html.PageClass()">
            <!--MENU-->
            <nav class="navbar-default navbar-static-side" role="navigation">
                <div class="sidebar-collapse">
                    <ul class="nav metismenu" id="side-menu">
                        <li class="nav-header">
                            <div class="profile-element">
                                <a href="#">
                                    <span class="block m-t-xs font-bold">@Session["usuario"]</span>
                                    <span class="text-muted text-xs block">@Session["tipoUsuario"]</span>
                                </a>
                            </div>
                            <div class="logo-element">
                                SI
                            </div>
                        </li>
                        @if (Session["tipoUser"].ToString() == "1")
                        {
                            @Html.Partial("_Menu")
                        }
                        else
                        {
                            @Html.Partial("_Menu2")
                        }
                    </ul>
                </div>
            </nav>
            <!--FIN MENU-->

            <div id="page-wrapper" class="gray-bg">
                <!--TOP NAVBAR-->
                <div class="row border-bottom">
                    <nav class="navbar navbar-static-top white-bg" role="navigation" style="margin-bottom: 0">
                        <div class="navbar-header">
                            <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
                        </div>
                        <ul class="nav navbar-top-links navbar-right">
                            <li style="padding:20px">
                                <h3><strong>Sistema Inventario</strong></h3>
                            </li>
                            <li>
                                <a href="@Url.Action("Logout","Usuarios")">
                                    <i class="fa fa-sign-out"></i> Desconectarse
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <!--FIN TOP NAVBAR-->
                @RenderBody()
            </div>
        </div>
    }
    else
    {
        Response.Redirect("~/");
    }
</body>
</html>
